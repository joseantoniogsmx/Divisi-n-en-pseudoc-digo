/* División en pseudocódigo - Undidad 2 - Actividad 3 - José Antonio García Sandoval */
/* incluye biblioteca donde se define E/S */
#include <stdio.h>
int main()
{
    float num1, num2, resultado;

    // Solicitar el primer número
    printf("Ingrese el primer número (numerador): ");
    scanf("%f", &num1);

    // Solicitar el segundo número
    printf("Ingrese el segundo número (denominador): ");
    scanf("%f", &num2);

    // Verificar si el denominador es cero
    if (num2 == 0) {
        printf("Error: No se puede dividir entre cero.\n");
    } else {
        resultado = num1 / num2;
        printf("El resultado de la división es: %.2f\n", resultado);
    }

    return 0;
}
